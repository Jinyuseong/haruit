generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  password  String
  createdAt DateTime  @default(now())

  missions  Mission[]
  rooms     Room[]
}

model Mission {
  id        Int       @id @default(autoincrement())
  title     String
  exp       Int
  done      Boolean   @default(false)
  createdAt DateTime  @default(now())

  userId    Int
  user      User      @relation(fields: [userId], references: [id])
}

model Room {
  id        Int       @id @default(autoincrement())
  name      String
  theme     String?
  createdAt DateTime  @default(now())

  userId    Int
  user      User      @relation(fields: [userId], references: [id])
}
